{% trans_default_domain 'FOSUserBundle' %}

<body>
<div class="login-card card-block auth-body mr-auto ml-auto">
<form action="{{ path("fos_user_security_check") }}" method="post" class="md-float-material">
    <div class="text-center">

        <img src="{{ asset ('assets/images/logoo.png') }}" height="80" alt="logo.png">

        {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
        <div class="auth-box">
            <div class="row m-b-20">
                <div class="col-md-12">
                    <h3 class="text-left txt-primary">Se connecter</h3>
                </div>
            </div>
            <hr/>

            <div class="input-group">
    <input class="form-control" placeholder="Nom d'utilisateur" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

                <span class="md-line"></span>
            </div>


            <div class="input-group">
    <input  class="form-control" placeholder="Mot de passe" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                <span class="md-line"></span>
            </div>
            <div class="row m-t-25 text-left">
                <div class="col-sm-7 col-xs-12">
                    <div class="checkbox-fade fade-in-primary">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" >
                            <span class="cr"><i class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                            <span class="text-inverse">S'en souvenir </span>
                        </label>
                    </div>
                </div>
                <div class="col-sm-5 col-xs-12 forgot-phone text-right">
                    <a href="auth-reset-password.html" class="text-right f-w-600 text-inverse"> Mot de passe oublier ?</a>
                </div>
            </div>
            <div class="row m-t-30">
                <div class="col-md-12">

    <input type="hidden" name="go_to" value="{{ path('layout') }}"/>


                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20"/>

                </div>
            </div>
            <hr/>
            <div>
            {% if error %}
                <div style="color: #0b2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

        </div></div>
    </div>
</form>
</div>
</body>